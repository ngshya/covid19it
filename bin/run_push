#!/bin/sh

setup_git() {
  git config --global user.email "ngshya@gmail.com"
  git config --global user.name "ngshya"
}

commit_website_files() {
  git add output/*
  git commit --message "Travis build: $TRAVIS_BUILD_NUMBER"
}

upload_files() {
  git remote add origin-pages https://${GH_TOKEN}@github.com/ngshya/covid19mdb.git > /dev/null 2>&1
  git push --quiet
}

setup_git
commit_website_files
upload_files